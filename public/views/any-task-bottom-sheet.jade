md-bottom-sheet.md-grid(layout="row" controller="AnyTasksBottomSheetController as vm")
  md-list(flex layout="row" layout-align="center center")
    md-list-item(ng-repeat="item in vm.items")
      md-button.md-grid-item-content(ng-click="vm.menu_click($index)")
        md-icon(md-font-icon="material-icons") {{ item.icon }}
        .md-grid-text {{ item.name }}
