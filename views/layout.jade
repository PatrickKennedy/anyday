doctype html
html(ng-app='anyday')
  head
    title= title
    link(rel='stylesheet', href='//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.css')
    link(rel='stylesheet', href='//cdnjs.cloudflare.com/ajax/libs/angular-ui-select/0.12.1/select.css')
    link(rel='stylesheet', href='/stylesheets/style.css')

  body(ng-controller='AnydayController as anyday')
    block content

    script(src='/javascripts/sugar.min.js')
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js')
    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.3.0/angular-sanitize.min.js')
    script(src='//cdnjs.cloudflare.com/ajax/libs/angular-ui-select/0.12.1/select.js')
    script(src='/javascripts/anyday.templates.js')
    script(src='/javascripts/anyday.js')


    if user
      script.
        angular.module('any.config')
          .config(function (AnyConfigProvider) {
            AnyConfigProvider.set({
                user: !{JSON.stringify(user)}
            });
          });
