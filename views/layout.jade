doctype html
html(ng-app='anyday')
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')

  body(ng-controller='AnydayController as anyday')
    block content

    script(src='//ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js')
    script(src='/javascripts/sugar.min.js')
    script(src='/javascripts/anyday.templates.js')
    script(src='/javascripts/anyday.js')


    if user
      script.
        angular.module('any.config')
          .config(function (AppConfigProvider) {
            AppConfigProvider.set({
                user: !{JSON.stringify(user)}
            });
          });
